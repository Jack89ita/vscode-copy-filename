{
    "name": "copy-filename",
    "displayName": "Copy filename",
    "description": "Simple VS Code plugin that allows you to copy file name or folder name to clipboard from sidebar or opened file label",
    "license": "MIT",
    "version": "1.0.0",
    "publisher": "jack89ita",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "sidebar",
        "copy-filename",
        "file",
        "folder",
        "clipboard",
        "vscode",
        "vscode-extension"
    ],
    "activationEvents": [
        "onCommand:extension.copyFileName"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyFileName",
                "title": "Copy name to clipboard"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.copyFileName"
                }
            ],
            "editor/title/context": [
                {
                    "command": "extension.copyFileName"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Jack89ita/vscode-copy-filename"
    },
    "galleryBanner": {
        "color": "#5d5d5d",
        "theme": "dark"
    },
    "icon": "img/cf_logo.png",
    "dependencies": {
        "copy-paste": "^1.3.0"
    }
}
